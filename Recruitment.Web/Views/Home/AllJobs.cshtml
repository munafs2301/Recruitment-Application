@model IEnumerable<Recruitment.Domain.Entities.Job>


@{
    ViewBag.Title = "AllJobs";
}

    <h2 class="text-center" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" >All Jobs</h2>
    <hr />
    <div class="text-center">
        <div style="padding:10px;">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {
                <div class="form-group">
                    <span class="control-label ">
                        <b>Search By:</b>
                    </span>
                    <span>
                        @Html.RadioButton("categories", "Title", true)Title
                        @Html.RadioButton("categories", "Company") Company
                        @Html.RadioButton("categories", "Location")Location<br />
                    </span>
                </div>

                <div class="form-group">
                    <span>
                        @Html.TextBox("search", null, htmlAttributes: new { @class = "" })
                    </span>
                    <span class="control-label">
                        <input type="submit" value="Search" class="btn btn-default " />
                    </span>
                </div>

            }
        </div>
    </div>
    <hr />
<div style=" background-color: #f8d8f8; box-shadow: 0 5px 12px rgba(0, 0, 0, 0.175); border: 1px solid grey; border-radius: 10px; display:grid; grid-template-columns: 1fr 1fr; grid-gap: 20px;">
    @foreach (var item in Model)
    {
       @Html.Partial("JobDetails", item)
    }
</div>
